extends ../layout/index 

block content 

    if errores
        div(class="max-w-md mx-auto my-10")
            each error in errores
                p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg


    .py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raíces
        h2.text-center.text-2x1.font-extrabold= page

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="./registro")
                    input(type="hidden", name="_csrf" value= csrfToken)
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="nombre") Tu Nombre
                        input(type="text", name="nombre" class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu Nombre" value= usuario ? usuario.nombre : '' )

                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="email") Tu E-mail
                        input(type="email", name="email" class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu email" value= usuario ? usuario.email : '' )
                    
                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="password") Tu Password
                        input(type="password", name="password" class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Tu password")

                    div
                        label(class="block text-sm uppercase text-gray-500 mb-2 font-bold" for="repetir") Repetir Password
                        input(type="password", name="repetir" class="w-full py-2 px-3 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Repetir Password")

                    div(class="flex items-center justify-between")
                        a(href="./login" class="text-xs text-gray-500") ¿Ya tienes cuenta? Iniciar sesión
                        a(href="./olvide-password" class="text-xs text-gray-500") Olvide mi password
                    
                    div
                        input(type="submit", value="Crear Cuenta" class="w-full cursor-pointer bg-indigo-600 font-bold py-3 text-white hover:bg-indigo-700")